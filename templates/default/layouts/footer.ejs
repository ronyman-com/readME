<footer>
    <div class="container">
        <div class="footer-content">
            <div class="footer-column">
                <h3>About KDO</h3>
                <p>The Khmer Democracy Organization is committed to promoting democratic values and human rights in Cambodia.</p>
                <div class="footer-social">
                    <a href="https://www.facebook.com/democracy.khmer.org" target="_blank" rel="noopener noreferrer"><i class="fab fa-facebook-f"></i></a>
                    <a href="https://x.com/KdoAustralia" target="_blank" rel="noopener noreferrer"><i class="fab fa-twitter"></i></a>
                    <a href="https://www.youtube.com/@khmer-democracy" target="_blank" rel="noopener noreferrer"><i class="fab fa-youtube"></i></a>
                </div>
            </div>
            
            <div class="footer-column">
                <h3>Quick Links</h3>
                <% 
                // Flatten the nested navigation structure
                function flattenNavItems(items) {
                    let flatItems = [];
                    items.forEach(item => {
                        if (item.link) {
                            flatItems.push({
                                text: item.text,
                                link: item.link
                            });
                        }
                        if (item.items) {
                            flatItems = flatItems.concat(flattenNavItems(item.items));
                        }
                    });
                    return flatItems;
                }
                
                const allNavItems = flattenNavItems(sidebar.items || []);
                const maxItemsPerColumn = 10;
                const columnCount = Math.ceil(allNavItems.length / maxItemsPerColumn);
                const prefix = typeof assetPrefix !== 'undefined' ? assetPrefix : '/';
                const cleanPrefix = prefix.endsWith('/') ? prefix : `${prefix}/`;
                %>
                
                <div class="footer-columns-container" style="display: flex; flex-wrap: wrap; gap: 2rem;">
                    <% for (let col = 0; col < columnCount; col++) { %>
                        <div class="footer-link-column" style="flex: 1; min-width: 150px;">
                            <ul class="footer-links">
                                <% 
                                const start = col * maxItemsPerColumn;
                                const end = start + maxItemsPerColumn;
                                const columnItems = allNavItems.slice(start, end);
                                
                                columnItems.forEach(item => {
                                    if (item && item.link && item.text) {
                                        let resolvedLink = item.link;
                                        if (!item.link.startsWith('http') && !item.link.startsWith('#')) {
                                            resolvedLink = item.link.replace(/^\/|\/$/g, '');
                                            if (resolvedLink.endsWith('_index')) {
                                                resolvedLink = resolvedLink.replace('/_index', '');
                                            }
                                            resolvedLink = `${cleanPrefix}${resolvedLink}`;
                                        }
                                %>
                                        <li style="margin-bottom: 0.5rem;">
                                            <a href="<%= resolvedLink %>" 
                                               <%= item.link.startsWith('http') ? 'target="_blank" rel="noopener noreferrer"' : '' %>
                                               style="color: #666; text-decoration: none; transition: color 0.3s;">
                                                <%= item.text %>
                                            </a>
                                        </li>
                                <%  }
                                }); %>
                            </ul>
                        </div>
                    <% } %>
                </div>
            </div>
            
            <div class="footer-column">
                <h3>Contact Info</h3>
                <div class="footer-contact">
                    <p><i class="fas fa-map-marker-alt"></i> Melbourne, Australia</p>
                    <p><i class="fas fa-envelope"></i> info@kdo.org.au/ kdo.officail@outlook.com</p>
                    <p><i class="fas fa-phone"></i> +61 395 444 950</p>
                </div>
            </div>
        </div>
        
        <div class="footer-bottom">
            <p>&copy; <%= new Date().getFullYear() %> Khmer Democracy Organization (KDO). All Rights Reserved.</p>
            <p>This website is built with <a href="https://readme-framework.org/" class="readme-credit">ReadME</a></p>
          </div>
          
          <style>
          .footer-bottom {
            background: #2c3e50;
            color: white;
            padding: 1.5rem;
            text-align: center;
            margin-top: 3rem;
            border-top: 3px solid #e74c3c;
          }
          
          .footer-bottom p {
            margin: 0.5rem 0;
            font-size: 0.9rem;
          }
          
          .readme-credit {
            font-weight: bold;
            color: #f1c40f;
            background: rgba(190, 187, 187, 0.849);
            padding: 0.2rem 0.5rem;
            border-radius: 4px;
            text-decoration: none;
            transition: all 0.3s ease;
          }
          
          .readme-credit:hover {
            background: rgba(0,0,0,0.4);
            color: #fff;
            text-decoration: underline;
          }
          </style>
    </div>
</footer>

<script src="<%= typeof assetPrefix !== 'undefined' ? assetPrefix : '' %>assets/js/main.js"></script>