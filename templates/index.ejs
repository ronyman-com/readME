<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/assets/css/theme.css">
  <!-- GitHub Buttons CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/github-buttons/2.21.0/buttons.min.css">
</head>
<body>
  <!-- Navbar -->
  <header class="navbar">
    <div class="navbar-brand">
      <img src="/assets/images/logo.jpg" alt="ReadME Logo">
      <span>ReadME Framework <span id="readme-version">v1.0.0</span></span>
    </div>
    <div class="github-buttons">
      <!-- GitHub Star Button -->
      <a
        class="github-button"
        href="https://github.com/ronyman-com/readME"
        data-icon="octicon-star"
        data-size="large"
        data-show-count="true"
        aria-label="Star your-username/your-repo on GitHub"
      >
        Star
      </a>
      <!-- Link to Source Code -->
      <a
        href="https://github.com/ronyman-com/readME"
        class="source-code-link"
        target="_blank"
        rel="noopener noreferrer"
      >
        Source Code
      </a>
    </div>
  </header>

  <!-- Sidebar -->
  <aside class="sidebar" id="sidebar">
    <div class="sidebar-resizer" id="sidebar-resizer"></div>
    <nav>
      <ul>
        <% sidebar.menu.forEach(item => { %>
          <% if (item.children) { %>
            <li class="folder">
              <details>
                <summary><%= item.title %></summary>
                <ul>
                  <% item.children.forEach(child => { %>
                    <li><a href="/<%= child.path %>.html"><%= child.title %></a></li>
                  <% }) %>
                </ul>
              </details>
            </li>
          <% } else { %>
            <li><a href="/<%= item.path %>.html"><%= item.title %></a></li>
          <% } %>
        <% }) %>
      </ul>
    </nav>
  </aside>

  <!-- Main Content -->
  <main class="content" id="content">
    <%- content %>
  </main>

  <!-- Footer -->
<footer class="footer">
  <p>&copy; <%= new Date().getFullYear() %> ReadME Framework. All rights reserved.</p>
  <a class="project-owner" href="https://www.ronyman.com/" target="_blank" rel="noopener noreferrer">
    readME,Project owned by: Rony MAN
  </a>
</footer>

  <!-- JavaScript -->
  <script src="/assets/js/sidebar.js"></script>
  <!-- GitHub Buttons Script -->
  <script async defer src="https://buttons.github.io/buttons.js"></script>
</body>
</html>


 <!-- Fetch ReadME Version -->
 <script>
  async function fetchReadMEVersion() {
    try {
      const response = await fetch('https://registry.npmjs.org/reademe-framework/latest');
      const data = await response.json();
      const version = data.version;

      const versionElement = document.getElementById('readme-version');
      if (versionElement) {
        versionElement.textContent = `v${version}`;
      }
    } catch (error) {
      console.error('Failed to fetch ReadME version:', error);
    }
  }

  fetchReadMEVersion();
</script>