<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <link rel="icon" href="/favicon.ico" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- User-configurable meta tags -->
  <meta property="og:title" content="Your Site Title" />
  <meta property="og:url" content="https://your-site.com" />
  <meta property="og:image" content="/assets/images/social-preview.jpg" />
  <meta property="og:site_name" content="Your Site Name" />
  <meta property="og:description" content="Your site description" />
  
  <meta name="twitter:card" content="summary" />
  <meta name="twitter:site" content="@yourusername" />
  
  <title><%= title %> | Your Site Name</title>
  
  <!-- Local assets (recommended) -->
  <link rel="stylesheet" href="/assets/css/theme.css">
  <link rel="stylesheet" href="/assets/css/prism.css">
  
  <!-- Or keep CDN links if preferred -->
  <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism.min.css"> -->
</head>
<body>
  <!-- Navbar -->
  <header class="navbar">
    <div class="navbar-brand">
      <img src="/assets/images/logo.png" alt="Site Logo">
      <span>Your Project <span id="version-display">v<%= version %></span></span>
    </div>
    
    <div class="external-links">
      <a href="https://github.com/your-repo" class="github-link" target="_blank">
        GitHub
      </a>
    </div>

    <button id="mobile-sidebar-toggle" class="mobile-sidebar-toggle">
      â˜°
    </button>
  </header>

  <!-- Mobile Sidebar -->
  <aside class="mobile-sidebar" id="mobile-sidebar">
    <nav>
      <ul>
        <% sidebar.menu.forEach(item => { %>
          <% if (item.children) { %>
            <li class="folder">
              <details>
                <summary><%= item.title %></summary>
                <ul>
                  <% item.children.forEach(child => { %>
                    <li><a href="/<%= child.path %>.html"><%= child.title %></a></li>
                  <% }) %>
                </ul>
              </details>
            </li>
          <% } else { %>
            <li><a href="/<%= item.path %>.html"><%= item.title %></a></li>
          <% } %>
        <% }) %>
      </ul>
    </nav>
  </aside>

  <!-- Sidebar -->
  <aside class="sidebar" id="sidebar">
    <div class="sidebar-resizer" id="sidebar-resizer"></div>
    <nav>
      <ul>
        <% sidebar.menu.forEach(item => { %>
          <% if (item.children) { %>
            <li class="folder">
              <details>
                <summary><%= item.title %></summary>
                <ul>
                  <% item.children.forEach(child => { %>
                    <li><a href="/<%= child.path %>.html"><%= child.title %></a></li>
                  <% }) %>
                </ul>
              </details>
            </li>
          <% } else { %>
            <li><a href="/<%= item.path %>.html"><%= item.title %></a></li>
          <% } %>
        <% }) %>
      </ul>
    </nav>
  </aside>

  <!-- Main Content -->
  <main class="content" id="content">
    <%- content %>
  </main>

  <!-- Footer -->
  <footer class="footer">
    <p>&copy; <%= new Date().getFullYear() %> Your Company. All rights reserved.</p>
    <div class="footer-content">
      <img src="/assets/images/logo.png" alt="Site Logo">
      <span>Built with <a href="#" target="_blank">Your Docs Framework</a></span>
    </div>
    
    <p>Built at: <%= new Date(buildTime).toLocaleString() %></p>
    <p>Version: <%= version %></p>
  </footer>

  <!-- JavaScript -->
  <script src="/assets/js/app.js"></script>
  <script src="/assets/js/prism.js"></script>
  
  <script>
    // Copy-to-Clipboard Function
    function copyCode(button) {
      const code = button.parentElement.querySelector('code').textContent;
      navigator.clipboard.writeText(code).then(() => {
        button.textContent = 'Copied!';
        setTimeout(() => button.textContent = 'Copy', 2000);
      });
    }

    // Initialize copy buttons
    document.querySelectorAll('pre > code').forEach(codeBlock => {
      const button = document.createElement('button');
      button.className = 'copy-button';
      button.textContent = 'Copy';
      button.onclick = () => copyCode(button);
      codeBlock.parentElement.prepend(button);
    });

    // Responsive sidebar toggle
    function updateSidebar() {
      const isMobile = window.innerWidth <= 768;
      document.getElementById('mobile-sidebar-toggle').style.display = isMobile ? 'block' : 'none';
      document.getElementById('sidebar').style.display = isMobile ? 'none' : 'block';
    }
    
    window.addEventListener('resize', updateSidebar);
    updateSidebar();
    
    document.getElementById('mobile-sidebar-toggle').addEventListener('click', () => {
      document.getElementById('mobile-sidebar').classList.toggle('active');
    });
  </script>
</body>
</html>